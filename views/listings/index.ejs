<% layout("/layouts/boilerplate") %>

<h3>All Listings</h3>
<a href="/listings/new" class="btn btn-success mb-3">Create New Listing</a>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4">
  <% alllisting.forEach(listing => { %>
    <!--<a href="/listings/<%= listing._id %>"></a>-->
    <div class="col mb-4">
      <div class="card h-100" style="width: 100%; border: none; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <img src="<%= listing.image %>" class="card-img-top " alt="<%= listing.title %>" style="object-fit: cover; height: 200px;">
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <!-- <p class="card-text"><%= listing.description %></p> -->
          <p class="card-text">â‚¹ <%= listing.price.toLocaleString("en-IN") %></p>
          <a href="/listings/<%= listing._id %>" class="btn btn-primary">View Details</a>
        </div>
      </div>
    </div>
  <% }) %>
</div>

